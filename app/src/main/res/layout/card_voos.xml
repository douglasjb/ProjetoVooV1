<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:id="@+id/card_voos"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    app:cardMaxElevation="3dp"
    cardview:cardCornerRadius="15dp"
    cardview:cardElevation="3dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/card_voos_origem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Origem" />

        <TextView
            android:id="@+id/card_voos_destino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_voos_origem"
            android:text="Destino" />

        <TextView
            android:id="@+id/card_voos_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_voos_destino"
            android:text="10/10/2015" />

        <TextView
            android:id="@+id/card_voos_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/card_voos_data"
            android:text="10:11" />
    </RelativeLayout>
</android.support.v7.widget.CardView>